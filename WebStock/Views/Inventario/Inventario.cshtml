@{
    @model InformeLote;
    <section class="align-items-center align-content-center MainFormProduc">
        <h2>Consulta de inventario</h2>
        <section class="InventoryView">
            <br />
                <div class="mb-4 w-50">
                    <label for="ConsultNumLote" class="form-label">Lote</label>
                <input type="number" onchange="CheckForm()" class="form-control" required placeholder="Ingrese el nombre numero de lote" name="NumeroLote" id="ConsultNumLote">
                <small class="form-text text-muted">Dejá el espacio en blanco para obtener todos los productos en inventario</small>
                </div>

            <button id="btnSubmit" onclick="loadInventory()" type="button" class="btn btn-primary h-25">Consultar</button>
            
        </section>
        <table class=" rounded-table table table-striped">
            <thead class="theadLocal bg-dark bg-gradient">
                <tr>
                    <th class="bg-dark" scope="col">Numero de lote</th>
                    <th class="bg-dark" scope="col">Producto</th>
                    <th class="bg-dark" scope="col">Cantidad en bodega</th>
                    <th class="bg-dark" scope="col">Fecha de vencimiento</th>
                    <th class="bg-dark" scope="col">Estado</th>
                </tr>
            </thead>
            <tbody id="TableInventoryBody">
              
            </tbody>
        </table>


     
    </section>
}
