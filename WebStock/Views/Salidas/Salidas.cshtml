@{
    @model ModelSalidaProducto;
    <section class="align-items-center align-content-center MainFormProduc">

        <section class="formView">
            <h2>Movimiento de productos</h2>
            <br />

            @using (Html.BeginForm("MoverProducto", "Salidas", FormMethod.Post, new { id = "FormSalidas" }))
            {
                <div class="mb-3">
                    <label for="NumLote" class="form-label">Lote de producto</label>
                    <input onfocusout="GetLote()" onchange="CheckFormSalida()" required type="number" name="Salida.NumLote" value="@Model.Salida.NumLote" class="form-control" id="NumLote">
                </div>

                <div class="mb-3">
                    <label for="Product" class="form-label">Producto</label>
                    <input list="ProductsList" type="text" onchange="CheckFormSalida()" readonly class="form-control" required placeholder="Nombre del Producto" name="Salida.Producto" value="@Model.Salida.Producto" id="Product" aria-describedby="emailHelp">
                    <datalist id="ProductsList">
                    </datalist>
                </div>

                <div class="mb-3">
                    <label for="CantidSalida" class="form-label">Cantidad</label>
                    <input placeholder="Número de lote" onchange="CheckFormSalida()" required type="number" name="Salida.Cantidad" value="@Model.Salida.Cantidad" class="form-control" id="CantidSalida">
                </div>

                <div class="mb-3">
                    <label for="FechaSalida" class="form-label">Fecha de salida</label>
                    <input type="date" class="form-control" onchange="CheckFormSalida()" required name="Salida.Fecha_salida" value="@Model.Salida.Fecha_salida" id="FechaSalida">
                </div>

                <div class="mb-3">
                    <label for="Destino" class="form-label">Destino</label>
                    <input onchange="CheckFormSalida()" placeholder="Quién solicita el producto" required name="Salida.Destino" value="@Model.Salida.Destino" type="text" class="form-control" id="Destino">
                   
                </div>

                

                <button id="btnSubmitSalidas" disabled="true" type="submit" class="btn btn-primary">Registrar salida</button>
            }
        </section>
        @if (Model.messaje?.Length > 0)
        {
            <div class="modal" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 style="color:blue" class="modal-title" id="staticBackdropLabel">Resultado de la operación</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body align-content-center text-center">
                            <h3 style="color:dimgray">@Model.messaje</h3>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-bs-dismiss="modal">De acuerdo</button>
                        </div>
                    </div>
                </div>
            </div>
        }


    </section>
}
